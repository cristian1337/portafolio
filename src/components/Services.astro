<style>
	.services {
		min-height: 80vh;
		padding: 8rem 2rem;
		background: black;
		position: relative;
		overflow: hidden;
	}

	.services-bg-text {
		position: absolute;
		top: 15%;
		left: 50%;
		transform: translate(-50%, -50%);
		font-family: "kulture", sans-serif;
		font-size: clamp(4rem, 12vw, 10rem);
		font-weight: 900;
		color: rgba(255, 255, 255, 0.15);
		letter-spacing: 0.1em;
		white-space: nowrap;
		z-index: 0;
		pointer-events: none;
		user-select: none;
	}

	.services-container {
		max-width: 1400px;
		margin: 0 auto;
		position: relative;
		z-index: 1;
	}

	.services-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		padding: 2rem 0;
	}

	.service-card {
		background: rgba(0, 0, 0, 0.5);
		border: 1px solid rgba(255, 255, 255, 0.1);
		border-radius: 12px;
		padding: 2.5rem 2rem;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
	}

	.service-card:hover {
		border-color: rgba(59, 130, 246, 0.3);
		box-shadow:
			0 0 30px rgba(59, 130, 246, 0.2),
			0 0 60px rgba(59, 130, 246, 0.1),
			inset 0 0 20px rgba(59, 130, 246, 0.05);
		background: rgba(0, 0, 0, 0.7);
		transform: translateY(-5px);
	}

	.service-title {
		font-family: "kulture", sans-serif;
		font-size: 1rem;
		color: white;
		margin-bottom: 1rem;
		font-weight: 100;
		position: relative;
		padding-bottom: 0.75rem;
	}

	.service-title::after {
		content: '';
		position: absolute;
		bottom: 0;
		left: 0;
		width: 40px;
		height: 2px;
		background: #3B82F6;
	}

	.service-list {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: 0;
	}

	.service-list li {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		color: rgba(255, 255, 255, 0.7);
		font-size: 0.95rem;
		transition: all 0.3s ease;
		padding: 0.15rem 0;
	}

	.service-list li:hover {
		color: white;
		transform: translateX(5px);
	}

	.service-list .icon {
		width: 20px;
		height: 20px;
		color: white;
		stroke: white;
		transition: all 0.3s ease;
		flex-shrink: 0;
		opacity: 0.7;
	}

	.service-list li:hover .icon {
		opacity: 1;
		transform: scale(1.1);
	}

	@media (max-width: 768px) {
		.services-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.services-bg-text {
			top: 5%;
			font-size: clamp(3rem, 15vw, 10rem);
		}
	}
</style>

<script>
	import { gsap } from "gsap";
	import { ScrollTrigger } from "gsap/all";

	gsap.registerPlugin(ScrollTrigger);

	// Aggressive background text parallax animation
	gsap.fromTo(".services-bg-text",
		{
			y: 100,
			opacity: 0.8
		},
		{
			y: -200,
			opacity: 0.05,
			ease: "none",
			scrollTrigger: {
				trigger: ".services",
				start: "top bottom",
				end: "bottom top",
				scrub: 1
			}
		}
	);

	// Animate service cards with stagger
	const serviceCards = document.querySelectorAll('.service-card');

	serviceCards.forEach((card, index) => {
		gsap.fromTo(card,
			{
				y: 80,
				autoAlpha: 0
			},
			{
				y: 0,
				autoAlpha: 1,
				duration: 1,
				ease: "power3.out",
				scrollTrigger: {
					trigger: card,
					start: "top 85%",
					end: "top 60%",
					scrub: 1
				}
			}
		);
	});

	// Animate list items on card hover
	serviceCards.forEach((card) => {
		const items = card.querySelectorAll('.service-list li');

		card.addEventListener('mouseenter', () => {
			gsap.fromTo(items,
				{
					x: -10,
					autoAlpha: 0.7
				},
				{
					x: 0,
					autoAlpha: 1,
					duration: 0.3,
					stagger: 0.05,
					ease: "power2.out"
				}
			);
		});
	});
</script>
